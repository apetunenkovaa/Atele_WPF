<Page x:Class="Atele_WPF.Avtorz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Atele_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Avtorz">

    <Grid>
        <StackPanel>
            <TextBlock Style="{StaticResource tb}">Авторизация</TextBlock>
            <GroupBox Style="{StaticResource gropbox}" Header="Введите логин">
                <TextBox Name="tb_Login"/>
            </GroupBox>
            <GroupBox Style="{StaticResource gropbox}" Header="Введите пароль">
                <PasswordBox Name="pb_Password"/>
            </GroupBox>
            
            <Button Content="Авторизация" Click="Button_Click" Template="{StaticResource big_btn}"/>
        </StackPanel>

        
        
    </Grid>
</Page>
