<Page x:Class="Atele_WPF.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Atele_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel>
            <TextBlock Style="{StaticResource tb}" HorizontalAlignment="Center" Name ="tb_text">Лучшее ателье в городе!</TextBlock>
            <Grid>
                <Button x:Name="btnp1" Template="{StaticResource pug}" HorizontalAlignment="Left" Margin="40,0,0,0">
                    <Button.OpacityMask>
                        <ImageBrush ImageSource="Res/pug.png"/>
                    </Button.OpacityMask>
                </Button>
                <Button x:Name="btnp2" Template="{StaticResource pug}" HorizontalAlignment="Right" Margin="0,0,40,0" >
                    <Button.OpacityMask>
                        <ImageBrush ImageSource="Res/pug.png"/>
                    </Button.OpacityMask>
                </Button>
            </Grid>
            <Image Name ="Photo" Height="200" Width="240" Source="Res/logo.png" Margin="0,0,0,0"/>
            
        </StackPanel>
    </Grid>
</Page>
