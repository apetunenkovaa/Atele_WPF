<Page x:Class="Atele_WPF.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Atele_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel>
            <TextBlock Style="{StaticResource tb}" HorizontalAlignment="Center" Name ="tb_Admin">Лучшее ателье в городе!</TextBlock>
            <Image Height="300" Width="360" Source="Res/reclama.jpg" Margin="0,20,0,0"/>
            <Button x:Name="btnp1" Template="{StaticResource pug}" >
                <Button.OpacityMask>
                    <ImageBrush ImageSource="Res/pug.png"/>
                </Button.OpacityMask>
            </Button>
        </StackPanel>
    </Grid>
</Page>
