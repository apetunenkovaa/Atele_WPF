<Window x:Class="Atele_WPF.WindowClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atele_WPF"
        mc:Ignorable="d"
        Title="WindowClient" Height="250" Width="600">
    <Grid Background="#a3cef1">
        <StackPanel>
            <GroupBox Style="{StaticResource gropbox}" Header="Введите новое имя">
                <TextBox Name="tbName"></TextBox>
            </GroupBox>
            <GroupBox Style="{StaticResource gropbox}" Header="Введите новую фамилию">
                <TextBox Name="tbSurname"></TextBox>
            </GroupBox>
            <Button Click="Button_Click" Template="{StaticResource big_btn}">Изменить данные</Button>
        </StackPanel>
    </Grid>
</Window>
